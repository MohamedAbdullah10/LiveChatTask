@using Microsoft.AspNetCore.Identity
@using LiveChatTask.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LiveChat</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">LiveChat</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Admin/Index">Admin Dashboard</a>
                                </li>
                            }
                            if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/User/Chat">Chat</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="navbar-text small text-light">
                                    Hello, @User.Identity!.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Admin</span>
                                    }
                                    else if (User.IsInRole("User"))
                                    {
                                        <span class="badge bg-info text-dark ms-1">User</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <button id="logoutButton" class="btn btn-outline-light btn-sm">
                                    Logout
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/User/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/User/Register">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-fill">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center">
            <span class="text-muted">&copy; @DateTime.UtcNow.Year - LiveChat Support</span>
        </div>
    </footer>

    <!-- Bootstrap 5 JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
        (function () {
            const logoutButton = document.getElementById('logoutButton');
            if (logoutButton) {
                logoutButton.addEventListener('click', async function () {
                    try {
                        const response = await fetch('/api/account/logout', {
                            method: 'POST',
                            credentials: 'include'
                        });

                        if (response.ok) {
                            window.location.href = '/';
                        } else {
                            window.location.href = '/';
                        }
                    } catch {
                        window.location.href = '/';
                    }
                });
            }
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

